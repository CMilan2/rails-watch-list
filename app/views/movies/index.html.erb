
<div class="container">
<h1>All the movies</h1>
  <div class="row row-cols-1 row-cols-md-3 g-4">
  <% @movies.each do |movie| %>
    <div class="col">
      <div class="card">
        <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.title %>">
        <div class="card-body">
          <h5 class="card-title"><%= link_to movie.title, movie_path(movie) %></h5>
          <p class="card-text"><%= movie.overview %></p>
          <p class="card-text"><%= movie.rating %>/10</p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>




<style>
  .card {
    width: 24rem; /* Set a bigger fixed width for the cards */
    height: 28rem; /* Set a bigger fixed height for the cards */
  }
  .card-img-top {
    height: 16rem; /* Set a bigger fixed height for the image */
    object-fit: cover; /* Ensure the image covers the entire area */
  }
  .card-body {
    overflow: hidden; /* Hide overflow text */
  }
</style>
