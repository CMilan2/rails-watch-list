<div class="container">
  <h1>All the lists</h1>

  <ol class="list-group list-group-numbered">
    <% @lists.each do |list| %>
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <div class="ms-2 me-auto">
        <div class="fw-bold">
          <%= link_to list.name, list_path(list) %>
        </div>
      </div>
      <span class="badge text-bg-primary rounded-pill">3</span>
      <%= link_to raw("<i class='fa-solid fa-pen'></i>"), edit_list_path(list), class:"ms-3", style:"color:orange" %>
      <%= link_to raw("<i class='fa-solid fa-trash'></i>"), list_path(list.id), data: {turbo_method: :delete, turbo_confirm: "Do you really want to delete '#{list.name}' ?"}, class:"ms-3", style:"color:red" %>
    </li>
    <% end %>
    <%= link_to "+ New list", new_list_path, class:"btn btn-outline-primary" %>
  </ol>
</div>
